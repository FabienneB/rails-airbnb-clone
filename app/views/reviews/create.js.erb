const newReviewForm = document.querySelector(".add_review");
<% if @review.errors.any? %>
  newReviewForm.innerHTML = "<%= j render 'reviews/form', cowork: @cowork, review: @review %>";
<% else %>
  // const review_list = document.querySelector(".all_reviews")
  var new_review = $("<%= j render 'reviews/show', review: @review %>").hide();
  $('#all_reviews').prepend(new_review);
  new_review.slideDown();
  $('#review_comment').val('');
  $('#review_rating').val('');
  $('#review_title').html('<%= j pluralize @cowork.reviews.count, "reviews" %>');
<% end %>
