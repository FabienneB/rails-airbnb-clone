<% content_for( :navbar_class, "navbar-home") %>

<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,100,0.3) 0%, rgba(0,36,100,0.3) 50%), url(<%= image_path 'banner.jpg'%>);">
  <div class="banner-content">
    <h1>KIKOHO</h1>
    <h2>Live everywhere, work everywhere</h2>
    <br>
    <%= form_tag(coworks_path, method: :get) do %>
      <%= search_field_tag 'city',nil, class: "form-home", placeholder: "  Where do you want to work?"%>
      <%= submit_tag "Search", class: "btn-home"%>
    <% end %>

    <% if notice %>
      <div class="alert alert-info alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <%= notice %>
      </div>
    <% end %>

    <% if alert %>
      <div class="alert alert-warning alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <%= alert %>
      </div>
    <% end %>
  </div>
</div>




<div class= "top_container">
  <div class= "top_content">
    <h3 class= "text-center title">Our top coworking places</h3>
    <div class="row">
      <% @coworks[-3..-1].each do |cowork| %>
        <div class="col-xs-12 col-md-4">
          <%= link_to cowork_path(cowork), class: "your-class" do %>
            <div class="card-home" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path cowork.photos.first.path, width: 300, height: 200, crop: :fill %>');">
                <div class="card-category-home"><%= cowork.capacity %> workers
                </div>
                <div class="card-description">
                  <h2><%= cowork.city %></h2>
                  <p>the place to code</p>
                </div>
                <p class="card-user-home" > $<%= cowork.price %> </p>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
    <div class="text-center discover"><%= link_to 'Discover more', coworks_path, class: "btn-discover"  %></div>
  </div>
</div>

