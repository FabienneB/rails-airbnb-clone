
<div class="container min-height">
  <i><h1 class = "title-styled"> Your bookings : </h1></i>

  <% if @bookings.empty? %>
      <h3 class= "no-book">You haven't booked any kikoho places yet <i class="fa fa-frown-o" aria-hidden="true"></i> </h3>
      <h3 class= "no-book"> <%= link_to "Let's check our amazing places", coworks_path %>  </h3>
  <% else %>
      <% @bookings.each do |booking| %>
    <div class="row">
      <div class="col-xs-12 col-md-12">
      <div class="product">

        <%= cl_image_tag booking.cowork.photos.first.path, width: 350, height: 350, crop: :fill, id: "kudoz", class: "product-image hidden-xs" %>
        <div class="product-body">
        <h3>Your booking at <span class = "city"> <%= booking.cowork.city%> </span> </h3>
        <h3><%= booking.cowork.title %></h3>
        <p><%= booking.cowork.description %></p>p>
        <h3>$ <span class = "city"><%= booking.cowork.price%></span> p/day</h3>
        <h3> With <span class = "city"> <%= booking.cowork.capacity%> </span> kikoho workers </h3>
        <h3> At <span class = "city"> <%= booking.cowork.user.username%></span> 's house </h3>
        <p>Check in : <%= booking.checkin %> <i class="fa fa-arrow-right icone-designed"></i> Check out : <%=booking.checkout %></p>
        <% duration = (booking.checkout - booking.checkin).to_i %>
        <p>Duration: <%= duration %></p>
        <% nbr_coworkers = booking.nbr_coworkers %>
        <p>Number of coworkers: <%= nbr_coworkers %></p>
        <% test = duration * booking.cowork.price %>
        <p>Total price :$ <%= duration * nbr_coworkers * booking.cowork.price %></p>
          <p id = "cancel-styled">Cancel your booking  <span>
            <%= link_to booking_path(booking), method: :delete, class: "icone-designed" do %>
            <i class="fa fa-trash"></i>
            <% end %>
            </span>
          </p>
          </div>

      </div>
      <% end %>

    <% end %>

      </div>
    </div>
</div>
